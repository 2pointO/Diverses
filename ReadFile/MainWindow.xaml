<Window x:Class="ReadFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Enter Filename" HorizontalAlignment="Left" Margin="44,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Height="146" Margin="153,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="258"/>
        <Button x:Name="open" Content="Open" HorizontalAlignment="Left" Margin="284,214,0,0" VerticalAlignment="Top" Width="75" Click="open_Click"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="192,214,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>

    </Grid>
</Window>
